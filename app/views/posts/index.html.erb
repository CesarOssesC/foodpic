<div class="columns">
  <div class="column">  
    <h1>Posts</h1>
  </div>
</div>

<div class="columns">
  <div id="posts">
    <% @posts.each do |post| %>
      <div class="column-3">
        <%= render post %>
        <p>
          <%= link_to "Show this post", post %>
        </p>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "New post", new_post_path %>
<%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete } %>